extends ../layout
//- 登录界面
block content
  link(rel="stylesheet", href="/css/normal.css")

  body
    nav.navbar.navbar-default
      .container-fluid(style="background-color: #1295D8;height: 100px;background-image: url('/img/background.png')")
        .container
          .navbar-header
            img.navbar-brand(src='/img/logo.png', style="height: 100px")
            h3.navbar-text(style="color: white; line-height:100px; text-align:left;margin:0")= title
    
    .container(style="background-color: white")
      .row
        .col-md-8.hidden-xs
          img.img-responsive(src="/img/loginBg.jpg")
        .col-xs-12.col-md-4
          h3 用户登录
          br
          form.signinForm(action='/signin', method='POST')
            .input-group
              .input-group-addon
                span.glyphicon.glyphicon-user(aria-hidden="true")
              input.form-control.userIdInput(type='text', name='id', placeholder="教师工号(五位数字，不足请在前面补0)")
            br
            .input-group
              .input-group-addon
                span.glyphicon.glyphicon-lock(aria-hidden="true")
              input.form-control.userPasswordInput(type='password', name='password', placeholder="密码")
            br
            .input-group.verifyPopoverHelp(data-toggle="popover", data-trigger="focus", data-placement="top", data-content="例如：(叁 加 柒) 结果为 10")
              .input-group-addon
                span.glyphicon.glyphicon-asterisk(aria-hidden="true")
              .input-group-addon
                span #{verifyCodeExpression} 结果为
              input.form-control.userVerifyCodeInput(type='text', name='verifyCode', placeholder="验证码")

            .col-md-12.col-xs-12.text-right.text-danger= message
            
            br
            .form-group
              button.btn.btn-primary.btn-block.signinBtn 登录
    
    script(src="/js/signin.js")
