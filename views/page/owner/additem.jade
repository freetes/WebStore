extends ../../layout
//- 主页
block content
  body
    include ../../head/nav
    .container
      form(action='/owner/additem', method='POST', enctype='multipart/form-data')
        .form-group
          label 名称
          input.form-control(type='text', name='name', placeholder='名称')
        .form-group
          label 价格
          input.form-control(type='text', name='price', placeholder='价格')
        .form-group
          label 描述
          input.form-control(type='text', name='introduction', placeholder='描述')
        .form-group
          label 数目
          input.form-control(type='text', name='amount', placeholder='数目')
        .form-group
          label 产地
          input.form-control(type='text', name='storehouse', placeholder='产地')
        .form-group
          label 标签
          input.form-control(type='text', name='tags', placeholder='标签')
        .form-group.hidden
          label 日期
          input#dateInput(type='datetime', name='date')
        script.
          setInterval(function(){
            $('#dateInput').val(`${new Date().getFullYear()}-${new Date().getMonth()+1}-${new Date().getDate()} ${new Date().getHours()}:${new Date().getMinutes()}:${new Date().getSeconds()}`)
          }, 1000)
        .form-group
          label 图片
          input#itemPicture(type='file', name='picture')

        button.btn.btn-default.updateItemBtn 提交
 
    include ../../head/footer