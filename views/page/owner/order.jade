extends ../../layout
//- 主页
block content
  link(rel="stylesheet", href="/css/normal.css")

  body
    include ../../head/nav
    .container
      .row
        .col-md-10
          -if(orders.length != 0)
            blockquote 
              p 有#{orders.length}个订单
            each i in orders
              .col-md-12.col-xs-12
                .panel.panel-default
                  .panel-body
                    .col-md-2
                      img.img-responsive
                    .col-md-10
                      h3
                        strong.item
                      .col-md-6
                        p.text-muted 买家：
                          span.name
                        p.text-muted 数量：
                          span #{i.amount}
                        p.text-muted 成交日期：
                          span #{i.date}
                      .col-md-6
                        p.text-muted 收货地址：
                          span #{i.address}
                        p.text-muted 联系电话：
                          span #{i.mobile}
                        p.text-muted 总价：
                          span.text-danger ￥#{i.price}
                    button.hidden.btn.btn-primary.btn-getinfo(onclick="getAllInfo('#{i.item}', '#{i.buyer}', this)") 获取信息
          -else
            p 无订单


    include ../../head/footer
    include ../../public/alertInfoModal
    script(src="/js/ajax.js")
