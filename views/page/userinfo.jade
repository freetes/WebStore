extends ../layout
//- 主页
block content
  link(rel="stylesheet", href="/css/normal.css")

  body
    include ../head/nav
    .container
      form.form-horizontal(action="/user/info", method="post")
        .form-group
          label.col-md-1.control-label 昵称
          .col-md-4
            input.form-control(type='text', name='name', value='#{user.name}')
        .form-group
          label.col-md-1.control-label 密码
          .col-md-4
            input.form-control(type='text', name='password', value='#{user.password}')
        .form-group
          .col-md-offset-1.col-md-2.col-xs-9
            button.btn.btn-primary.updateItemBtn(style="background-color: green") 提交
        
